---
import '../styles/styles.scss';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ScrollContainer from "../components/ScrollContainer.astro";
import { getImage } from "astro:assets";
import myBackground from "../assets/images/background.webp";

const { pageTitle } = Astro.props;
const optimizedBackground = await getImage({src: myBackground, format: 'webp'})
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="This website provides information about mountain biking experiences and communities
  in latin america and across the world">
  <title>{pageTitle}</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
</head>
<body style={`background-image: url(${optimizedBackground.src});`}>
  <div class="container">
    <Header />
    <main>
      <slot />
    </main>
    <ScrollContainer />
    <Footer />
  </div>
</body>

<style lang="scss">
  @import "../styles/variables.scss";
  body {
    position: relative;
  }

  .container {
    display: flex;
    flex-direction: column;
    text-align: center;
    min-height: 100vh;
  }

  main {
    color: $white;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1 0 auto;
  }
</style>
</html>