---
import { Image } from 'astro:assets';
const { url, cover, coverAlt, title, location, amenities } = Astro.props;
---

<li>
  <a href={url}>
    <Image src={cover} alt={coverAlt} />
    <h3>{title}</h3>
    <div>
      <p>{location}</p>
      <p>
        {amenities.map((amenity) =>
            <span class="material-symbols-outlined" id={amenity}>{amenity}</span>
        )}
      </p>
    </div>
  </a>
</li>

<style lang="scss">
  @import "../styles/variables.scss";
  li {
    opacity: $bg-transparency;
  }
  a {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    background-color: $white;

    & div {
      display: flex;
      justify-content: space-between;
      padding: $spacing-0 $spacing-4;
      font-size: $spacing-4;
      text-align: left;
      color: $light-text-color;

      :is(p) {
          padding: $spacing-0;
      }

      :is(span) {
          color: $light-text-color;
          align-self: center;
      }
    }
  }

  img {
    width: 100%;
    height: 150px;
    object-fit: cover;
  }

  h3 {
    margin-top: $spacing-2;
    margin-bottom: $spacing-0;
    font-size: $spacing-5;
    font-weight: 300;
    text-align: left;
    padding-left: $spacing-4;
    color: $dark-gray;
  }
</style>