---
import { Image } from 'astro:assets';
const { cover, index, title, event } = Astro.props;
const { Content } = await event.render();
---
<dialog id=`content-dialog-${index}`>
  <form method="dialog">
    <div class="dialog-content">
      <h6>{title}</h6>
      <Image src={cover} alt={title} />
      <Content />
    </div>
    <button id=`cancel-dialog-${index}` type="reset">Close</button>
  </form>
</dialog>

<script src="../utilities/dialog.js"></script>

<style lang="scss">
  @import "../styles/variables.scss";
  dialog {
    background: #f9f9f9;
    border: none !important;
    border-radius: calc($rounded-border * 3);
    padding: $spacing-6;
    max-width: 400px;
    & img {
      display: block;
      max-width: 90%;
      height: 300px;
      margin: 0 $spacing-4 $spacing-2 $spacing-4;
      border-radius: $rounded-border;
    }
    & h6 {
      color: $cyan;
      padding: 0;
      text-align: center;
    }
    & :global(p) {
      font-size: $spacing-3;
      font-weight: 300;
      line-height: 1.5;
      text-align: center;
      margin: 0 0 1.15em;
      color: $light-text-color;
    }
    & :global(a) {
      color: $cyan;
      text-decoration: none;
    }
  }
  dialog::backdrop {
    background: $light-text-color;
    opacity: 0.9;
  }
  button {
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    background-color: $cyan;
    border: none;
    color: white;
    padding: $spacing-3 $spacing-8;
    font-size: $spacing-3;
    margin: 4px 2px;
    cursor: pointer;
  }
</style>